@{
    ViewData["Title"] = "Submission Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Success!</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h4 class="text-center">Thank you for your submission</h4>
                    <p class="text-center">We have received your contact information.</p>
                    <p class="text-center">An email has been sent to your address with additional details.</p>
                    <div class="d-grid mt-4">
                        <a asp-action="Create" class="btn btn-primary">Back to Form</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>